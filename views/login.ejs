<%include ./partials/header%>
<div class="login-screen">

  <form class="login-form" action="/login" method="post">
    <div class="form-group">
      <input type="text" class="form-control login-field" name="username" placeholder="username" />
      <label class="login-field-icon fui-user" for="login-name"></label>
    </div>

    <div class="form-group">
      <input type="password" class="form-control login-field"  name="password" placeholder="password" />
      <label class="login-field-icon fui-lock" for="login-pass"></label>
    </div>
    <div class="form-group">
      <input class="btn btn-primary btn-lg btn-block" type="submit" value="Log In">
    </div>
    <a class="login-link" href="#">Lost your password?</a>   
  </form>
</div>     
<%include ./partials/footer%>
